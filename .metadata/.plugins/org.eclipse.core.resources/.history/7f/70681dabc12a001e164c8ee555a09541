	<%
		// 자바 main에서 사용한 내용 그대로 코딩
		ApplicationContext context = 
			new GenericXmlApplicationContext("ex06_web_DI/config.xml");
		HelloImpl hello = (HelloImpl) context.getBean("hello");
		String msg = hello.sayHello();
		out.println("<h2>" + msg + "</h2>");
		

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- spring annotation : xml에서 작성한 내용을
							 코딩을 작성하는 과정에 annotation을 이용해서 
	 -->
	<bean id="oracleDAO" class="ex05_Annotation.OracleDAO" />
	<bean id="mysqlDAO" class="ex05_Annotation.MySQLDAO" />
	
	<bean id="service" class="ex05_Annotation.Service">
	 	<!-- ctrl space 했을 때 나오는 것 중 setter는 property -->
	 	<!-- 먼저 만든 객체를 의존성 주입하기 위해서 ref 사용(참조) -->
	 	<!-- <constructor-arg ref="oracleDAO"></constructor-arg> -->

	 	<!-- property는 변수 중에서 setter를 가진 변수를 모두 보여준다! -->
	 	<!-- ref에는 내가 하고싶은 것 넣기 -->
	 	<property name="dao" ref="oracleDAO" />
	 </bean>

</beans>